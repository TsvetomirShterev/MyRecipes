@model RecipesInstructionsServiceModel

@{
    ViewBag.Title = "Model details";
}

<div class="row">
    <img class="col-md-6" src="@Model.ImageUrl" alt="@Model.Title">
    <div class="col-md-6">
        <h1>@Model.Title</h1>
        <h2>Category: @Model.CategoryName</h2>
        <div class="jumbotron">
            <p>Ingredients:</p>
            <p>@Model.Ingredients</p>
        </div>
        <div class="jumbotron">
            <p>Instrucitons:</p>
            <p>@Model.Instructions</p>
        </div>
        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Id" asp-route-information="@(Model.Title + "-" + Model.CategoryName)" class="btn btn-primary">View Model</a>
        @if (ViewBag.AllowRecipeEdit == true || User.IsAdmin())
        {
            <a asp-controller="Recipes" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-controller="Recipes" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        }
    </div>
</div>